{
  "name": "yokohama",
  "version": "1.0.0",
  "description": "Agentic visual regression test harness for SvelteKit",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yokohama": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "analyze": "node --env-file=.env dist/cli.js analyze",
    "vrt": "npx playwright test",
    "vrt:update": "npx playwright test --update-snapshots",
    "list": "node --env-file=.env dist/cli.js list",
    "baselines": "node --env-file=.env dist/cli.js baselines"
  },
  "keywords": [
    "playwright",
    "visual-regression",
    "testing",
    "sveltekit",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "openai": "^4.73.0",
    "ora": "^8.1.1",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
